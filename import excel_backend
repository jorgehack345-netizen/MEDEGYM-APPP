# excel_backend.py

import openpyxl
from datetime import datetime, timedelta

def calcular_vencimiento(fecha_inicio_str):
    # fecha_inicio_str debe venir como "YYYY-MM-DD"
    fecha_inicio = datetime.strptime(fecha_inicio_str, "%Y-%m-%d")
    fecha_vencimiento = fecha_inicio + timedelta(days=30)
    return fecha_vencimiento.strftime("%Y-%m-%d")
